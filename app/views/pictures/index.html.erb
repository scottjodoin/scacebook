<h1><%= link_to @user.name, user_path(@user) %>'s Pictures</h1>
<% if current_user == @user %>
  <p><%= link_to "New Picture", new_picture_path%><p>
<% end %>
<% @pictures.each do |picture| %>
  <div style="float:left;">
    <%= link_to image_tag(picture.image.variant(resize: '300x300!')), picture_path(picture) %>
  </div>
<% end %>